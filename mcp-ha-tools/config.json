{
  "name": "MCP HA Tools Server",
  "version": "0.1.5",
  "slug": "mcp_ha_tools_server",
  "description": "Local MCP SSE server exposing history/energy tools for Conversation.",
  "arch": ["aarch64", "amd64", "armv7", "armhf", "i386"],
  "startup": "services",
  "boot": "auto",
  "init": false,
  "host_network": true,
  "options": {
    "ha_url": "http://homeassistant:8123",
    "log_level": "INFO",
    "db_host": "core-postgres",
    "db_port": 5432,
    "db_name": "homeassistant",
    "db_user": "ha_reader",
    "db_password": "CHANGE_ME",
    "enable_write": false
  },
  "schema": {
    "ha_url": "str?",
    "log_level": "list(DEBUG|INFO|WARNING|ERROR|CRITICAL|NOTSET)?",
    "db_host": "str?",
    "db_port": "int?",
    "db_name": "str?",
    "db_user": "str?",
    "db_password": "str?",
    "enable_write": "bool?"
  },
  "environment": {
    "HA_URL": "http://homeassistant:8123",
    "HA_TOKEN": "{env_sup_token}",
    "DB_HOST": "{options.db_host}",
    "DB_PORT": "{options.db_port}",
    "DB_NAME": "{options.db_name}",
    "DB_USER": "{options.db_user}",
    "DB_PASSWORD": "{options.db_password}",
    "ENABLE_WRITE": "{options.enable_write}"
  },
  "url": "https://github.com/mar-eid/ha-addon-hello",
  "documentation": "https://github.com/mar-eid/ha-addon-hello/blob/main/README.md"
}
