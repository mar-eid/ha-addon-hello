{
  "name": "MCP HA Tools Server",
  "version": "0.1.10",
  "slug": "mcp_ha_tools_server",
  "description": "MCP SSE server for Home Assistant Conversation. Read history/energy and SQL (read-only by default).",
  "arch": [
    "aarch64",
    "amd64",
    "armv7",
    "armhf",
    "i386"
  ],
  "startup": "services",
  "boot": "auto",
  "init": false,
  "host_network": true,
  "options": {
    "ha_url": "http://homeassistant.local:8123",
    "ha_token": "",
    "log_level": "INFO",
    "db_host": "core-postgres",
    "db_port": 5432,
    "db_name": "homeassistant",
    "db_user": "ha_reader",
    "db_password": "CHANGE_ME",
    "enable_write": false
  },
  "schema": {
    "ha_url": "str?",
    "ha_token": "password?",
    "log_level": "list(DEBUG|INFO|WARNING|ERROR|CRITICAL|NOTSET)?",
    "db_host": "str?",
    "db_port": "int?",
    "db_name": "str?",
    "db_user": "str?",
    "db_password": "str?",
    "enable_write": "bool?"
  },
  "environment": {
    "HA_URL": "{options.ha_url}",
    "HA_TOKEN": "{options.ha_token}",
    "DB_HOST": "{options.db_host}",
    "DB_PORT": "{options.db_port}",
    "DB_NAME": "{options.db_name}",
    "DB_USER": "{options.db_user}",
    "DB_PASSWORD": "{options.db_password}",
    "ENABLE_WRITE": "{options.enable_write}"
  },
  "url": "https://github.com/mar-eid/ha-addon-hello",
  "documentation": "https://github.com/mar-eid/ha-addon-hello/blob/main/README.md"
}
